/* pages/index/index.wxss */

.title {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  top: 25%;
  left: 50%;
  margin-left: -60rpx;
  margin-top: -100rpx;
}

.titletext {
  text-align: center;
  font-size: 70rpx;
  color: #90b44b;
}

.subtitle {
  position: absolute;
  width: 300rpx;
  height: 400rpx;
  top: 80%;
  left: 50%;
  margin-left: -150rpx;
  margin-top: -150rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 50rpx;
  color: #FCFAF2;
}

.subitem{
  border: 1rpx solid #90b44b;
  background-color: #90b44b;
  padding: 10rpx;
}

.foottitle {
  position: absolute;
  width: 100%;
  height: 100rpx;
  top: 95%;
  left: 50%;
  margin-left: -250rpx;
  margin-top: -50rpx;
  font-size: 40rpx;
  color: #90b44b;
}

.teamug {
  position: absolute;
  margin: auto;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 240rpx;
  height: 240rpx;
}

.teawater {
  position: absolute;
  width: 240rpx;
  height: 200rpx;
  background: #3a3226;
  border-radius: 30% 30% 70% 70% / 20% 20% 100% 100%;
}

.teawater:before {
  content: '';
  position: absolute;
  z-index: 1;
  top: -25rpx;
  right: 2rpx;
  width: 236rpx;
  height: 100rpx;
  background: #b7bf90;
  background-image: linear-gradient(180deg, #b7bf90 0%, #b0e8b7 100%);
  border-radius: 100%;
  box-shadow: inset 0 12rpx 0 2rpx #ecddd6, 0 4rpx 0 1rpx #fff8f6;
}

.teawater:after {
  content: '';
  position: absolute;
  z-index: -1;
  top: 115rpx;
  left: 46rpx;
  width: 143rpx;
  height: 80rpx;
  background: #d9aa8c;
  border-radius: 100%;
  box-shadow: 4rpx 4rpx 26rpx 16rpx #d9aa8c;
}
